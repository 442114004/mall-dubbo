<!--pages/topic-list/topic-list.wxml-->
<view class="list">
    <block wx:for="{{list}}" >
        <navigator  class="item layout-0" url="/pages/topic/topic?id={{item.id}}">
            <view class="flex-row">
                <view class="flex-grow-1 flex-col">
                    <view class="flex-grow-1">
                        <view class="title">{{item.title}}</view>
                    </view>
                    <view class="flex-grow-0 read-count">{{item.readCount}}</view>
                </view>
                <view class="flex-grow-0" style="position: relative">
                    <image class="cover-pic" mode="aspectFill" src="{{item.pic}}"></image>
                    <view class="goods-count" wx:if="{{item.productCount}}">{{item.productCount}}</view>
                </view>
            </view>
        </navigator>

        <navigator wx:if="{{item.stat==1}}" class="item layout-1" url="/pages/topic/topic?id={{item.id}}">
            <view class="title" style="font-size: 12pt;font-weight: 600">{{item.title}}</view>
            <image class="cover-pic" mode="aspectFill" src="https://zscat.tunnel.qydev.com/upload/brand/{{item.img}}"></image>
            <view class="flex-row">
                <view class="flex-grow-1 read-count">{{item.readCount}}</view>
                <view class="flex-grow-0 goods-count" wx:if="{{item.productCount}}">{{item.productCount}}</view>
            </view>
        </navigator>

    </block>
</view>
<view class="no-content" wx:if="{{!is_loading && (!list || list.length==0)}}">暂无内容</view>
<view class="loading-more {{is_loading?'active':''}}">
    <image src="/images/loading.svg"></image>
</view>